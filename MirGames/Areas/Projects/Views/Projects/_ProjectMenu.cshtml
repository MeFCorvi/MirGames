@using MirGames.Domain.Wip.ViewModels
@using MirGames.Infrastructure
@model WipProjectViewModel
@{
    string section = (string)ViewBag.SubSection;
}

<a href="@Url.ActionCached(MVC.Projects.Projects.Project(Model.Alias))" @Html.Css("selected", section == "Project")><i class="fa fa-home"></i>Проект</a>
        
@if (!Model.RepositoryUrl.IsNullOrEmpty() && Model.CanReadRepository)
{
    <a href="@Url.ActionCached(MVC.Projects.Projects.Code(Model.Alias, "/"))" @Html.Css("selected", section == "Repository")><i class="fa fa-code"></i>Исходный код</a>
}
<a href="@Url.ActionCached(MVC.Projects.Projects.WorkItems(Model.Alias, null, null))" @Html.Css("selected", section == "WorkItems")><i class="fa fa-bug"></i>Трекер</a>
@*@<a href="@Url.ActionCached("Team", new { projectAlias = Model.Alias })"><i class="fa fa-users"></i>Команда</a>
    <a href="@Url.ActionCached("Files", new { projectAlias = Model.Alias })"><i class="fa fa-download"></i>Файлы</a>*@
<a class="disabled"><i class="fa fa-users"></i>Команда</a>
<a href="@Url.ActionCached(MVC.Projects.Projects.Gallery(Model.Alias))" @Html.Css("selected", section == "Gallery")><i class="fa fa-picture-o"></i>Галерея</a>
<a class="disabled"><i class="fa fa-download"></i>Файлы</a>
@if (Model.CanEdit)
{
    <a href="@Url.ActionCached(MVC.Projects.Projects.Settings(Model.Alias))" @Html.Css("selected", section == "Settings")><i class="fa fa-gear"></i>Настройки</a>
}
