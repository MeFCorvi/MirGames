@using MirGames.Domain.Security

<a href="@Url.Action(MVC.Forum.Forum.Index())" @Html.Css("selected", (string)ViewBag.Subsection == "All")>Все обсуждения</a>
<a href="@Url.Action(MVC.Forum.Forum.Topics(onlyUnread: true))" @Html.Css("selected", (string)ViewBag.Subsection == "Unread")>Непрочитанные</a>

@if (User.Can("Create", "ForumTopic"))
{
    <a href="@Url.Action(MVC.Forum.Forum.New())" @Html.Css("selected", (string)ViewBag.Subsection == "New")><i class="fa fa-pencil"></i>Новое обсуждение</a>
}
    
@if (ViewBag.ForumTopicsUnread > 0)
{
    <a href="javascript:void(0);" ng-click="markAllAsRead()">Отметить всё, как прочитанное</a>
}
