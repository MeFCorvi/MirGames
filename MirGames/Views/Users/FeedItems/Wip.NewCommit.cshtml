@model MirGames.Domain.Wip.Notifications.NewCommitNotificationDetailsViewModel

<article @Html.Css("forum-new-answer")>
    <div class="icon">
        <i class="fa fa-git"></i>
    </div>
    <div class="author-avatar">
        <a href="@Url.ActionCached(MVC.Users.Profile(Model.Author.Id.GetValueOrDefault()))" class="avatar-link"><img src="@Model.Author.AvatarUrl" class="avatar" /></a>
    </div>
    <div class="micro-message-content">
        <div class="micro-message-author">
            <a href="@Url.ActionCached(MVC.Users.Profile(Model.Author.Id.GetValueOrDefault()))" class="user-login"><span>@Model.Author.Login</span></a>
            закомитил изменения в проект <a href="@Url.ActionCached(MVC.Projects.Projects.Project(Model.ProjectAlias))">@Model.ProjectAlias</a>
        </div>
        <div class="text">@Model.Message</div>
        <footer>
            <span class="creation-date relative" datetime="@Model.NotificationDate.UserDate().ToString("O")">@Html.RelativeDate(Model.NotificationDate)</span>
        </footer>
    </div>
</article>