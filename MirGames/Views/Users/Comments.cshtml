@using MirGames.Models
@model MirGames.Controllers.UsersController.CommentsPageViewModel
@{
    ViewBag.Title = Model.User.Login;
    AddPageCssClass("user-comments-page");
}

@Html.Partial("_ProfileMenu", Model.User)
@Html.Partial("_Pagination", (PaginationViewModel)ViewBag.Pagination)

<div class="comments-list">
    @foreach (var comment in Model.Comments)
    {
        <div class="comment-item">
            <div class="topic-title">
                <a href="@Url.ActionCached(MVC.Topics.Topics.Topic(comment.TopicId))">@comment.TopicTitle</a>
            </div>
            @Html.Partial(MVC.Topics.Topics.Views._Comment, comment)
        </div>
    }
</div>

@Html.Partial("_Pagination", (PaginationViewModel)ViewBag.Pagination)
